{
  "compilerOptions": {
    // 生成目录
    "target": "ES2020",
    // 模块
    "module": "ESNext",
    // 不允许js文件
    "allowJs": false,
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "dist",
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "unplugin-icons/types/vue",
      "vite/client",
      "vexip-ui/types"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/type/auto-imports.d.ts",
    "src/type/components.d.ts",
    "./vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
